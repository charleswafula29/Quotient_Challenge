<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#6EC1E8" />
            <gradient android:angle="-90" android:startColor="#6EC1E8" android:endColor="#2CA4DD"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#2CA4DD" />
            <solid android:color="#2CA4DD"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#6EC1E8" />
            <gradient android:angle="-90" android:startColor="#6EC1E8" android:endColor="#2CA4DD"  />
        </shape>
    </item>
</selector>